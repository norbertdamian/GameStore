@model GameStore.Models.GamePlatformViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Game library</h1>

<p>
    <a asp-action="Create">Add new game</a>
</p>

<form asp-controller="Games" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        Platform: <select asp-for="GamePlatform" asp-items="Model.Platform">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table table-striped">
    <thead class="thead-dark">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Games)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Platform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
